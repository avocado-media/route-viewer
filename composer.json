{
    "name": "avocado-media/hackathon",
    "description": "This is my package hackathon",
    "keywords": [
        "avocado-media",
        "laravel",
        "hackathon"
    ],
    "homepage": "https://github.com/avocado-media/hackathon",
    "license": "MIT",
    "authors": [
        {
            "name": "Sem",
            "email": "sem@avocado-media.nl",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "spatie/laravel-package-tools": "^1.13.0",
        "illuminate/contracts": "^9.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^6.0",
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Avocadomedia\\Hackathon\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Avocadomedia\\Hackathon\\Tests\\": "tests"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Avocadomedia\\Hackathon\\HackathonServiceProvider"
            ],
            "aliases": {
                "Hackathon": "Avocadomedia\\Hackathon\\Facades\\Hackathon"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
